<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @post %>
      <%= form_with url: user_posts_path, scope: :post, class: "shadow p-3 mb-3 bg-info rounded", local: true do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of the post" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :text, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :text, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your text here" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit 'Post', class: "btn btn-outline-light mt-3" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to posts listing ]', user_posts_path, class: "text-info" %>
    </div>
  </div>
</div>